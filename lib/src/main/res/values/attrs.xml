<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- CircleImageView -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <!-- TweetPictures -->
    <declare-styleable name="TweetPicturesLayout">
        <attr name="verticalSpace" format="dimension" />
        <attr name="horizontalSpace" format="dimension" />
        <attr name="column" format="integer" />
        <attr name="maxPictureSize" format="dimension" />
    </declare-styleable>

    <!-- TweetTextView -->
    <declare-styleable name="TweetTextView">
        <attr name="dispatchToParent" format="boolean" />
    </declare-styleable>

    <!-- wheelview -->
    <declare-styleable name="wheelview">
        <attr name="wv_gravity">
            <enum name="wv_center" value="17" />
            <enum name="wv_left" value="3" />
            <enum name="wv_right" value="5" />
        </attr>
        <attr name="wv_textSize" format="dimension" />
        <attr name="wv_textColorOut" format="color" />
        <attr name="wv_textColorCenter" format="color" />
        <attr name="wv_dividerColor" format="color" />
    </declare-styleable>

    <!-- loading -->
    <declare-styleable name="Loading">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
        <attr name="indicatorName" format="string" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

</resources>